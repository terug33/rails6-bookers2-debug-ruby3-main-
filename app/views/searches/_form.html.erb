<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({"User" => "user", "Book" => "book"}) %>
    <%= f.select :method, options_for_select({"完全一致" => "perfect_match", "前方一致" => "starts_with", "後方一致" => "ends_with", "部分一致" => "partial"}) %>
    <%= f.submit '検索する' %>
  <% end %>
<% end %>